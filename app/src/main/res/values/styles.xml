<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ActivityWindowTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="LightActionBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow and the overflow button! -->
        <item name="android:background">@color/ivory</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.Title</item>
        <item name="colorControlNormal">@color/black</item> <!-- sets the color for the back arrow -->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item> <!-- sets the style for the overflow button -->
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="AppTheme.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/onyx</item>
    </style>
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/onyx</item>
    </style>
    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:width">40dp</item>
        <item name="android:drawableTint" tools:targetApi="m">?attr/colorPrimary</item>
    </style>

    <style name="ButtonPrimary">
        <item name="colorOnPrimary">?colorOnPrimary</item>
        <item name="cornerRadius">0dp</item>
        <item name="background">?colorPrimary</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">?colorPrimary</item>
    </style>

    <style name="ButtonSecondary">
        <item name="colorOnPrimary">?colorOnPrimary</item>
        <item name="cornerRadius">0dp</item>
        <item name="background">?colorTertiaryContainer</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">?colorTertiaryContainer</item>
    </style>

    <style name="CustomEditTextLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

</resources>