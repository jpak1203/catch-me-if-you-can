<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CatchMeIfYouCan" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/onyx</item>
        <item name="colorPrimaryVariant">@color/onyx</item>
        <item name="colorOnPrimary">@color/ivory</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cinnabar</item>
        <item name="colorSecondaryVariant">@color/cinnabar</item>
        <item name="colorOnSecondary">@color/ivory</item>

        <item name="colorTertiaryContainer">@color/green_blue_crayola</item>
        <item name="colorAccent">@color/keppel</item>
        <!-- Highlight brand colors -->
        <item name="colorError">@color/cinnabar</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/ActivityWindowTransition</item>
        <item name="android:fontFamily">@font/fontfamily</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>