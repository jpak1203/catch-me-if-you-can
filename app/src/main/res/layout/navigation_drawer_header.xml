<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/navigation_drawer_header_height"
    android:background="#EFEEEB"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/client_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation_drawer_email"
        android:src="@drawable/ic_account"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/navigation_drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="jpak1203@gmail.com"
        tools:text="jpak1203@gmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>